rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // App data: users/{uid}/projects/*/notes/* and users/{uid}/tasks/*
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /projects/{projectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        match /notes/{noteId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}